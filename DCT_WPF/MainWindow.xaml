<Window x:Class="DCT_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCT_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        Background="#282828"
        FontFamily="Fonts/#Helvetica Regular">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button FontFamily="Fonts/#Helvetica Bold"
                        Margin="5" Width="100" Height="30" 
                        Content="{DynamicResource HomeButton}" 
                        Command="{Binding UpdateViewCommand}" 
                        CommandParameter="Home"/>
                <Button FontFamily="Fonts/#Helvetica Bold"
                        Margin="5" Width="100" Height="30" 
                        Content="{DynamicResource DetailsButton}" 
                        Command="{Binding UpdateViewCommand}" 
                        CommandParameter="Details"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <TextBox Width="150" Height="25"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         VerticalContentAlignment="Center"/>
                <Button Width="50" Height="25" Content="{DynamicResource SearchButton}" Margin="5,0,0,0"
                        Command="{Binding SearchCommand}"/>


                <Popup IsOpen="{Binding IsPopupOpen}"
                       Placement="Bottom"
                       StaysOpen="False"
                       AllowsTransparency="True">   
                    <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Width="200">
                        <StackPanel>
                            <TextBlock Text="{Binding SearchResult.Name}" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding SearchResult.Symbol}" FontStyle="Italic"/>

                            <TextBlock>
                                <Run Text="{DynamicResource MainPagePriceField}"/>
                                <Run Text="{Binding SearchResult.CurrentPrice, StringFormat={}{0:C}}"/>     
                            </TextBlock>    
                            <TextBlock>
                                <Run Text="{DynamicResource DetailPageVolumeField}"/>
                                <Run Text="{Binding SearchResult.TotalVolume}"/>            
                            </TextBlock>

                            <TextBlock>
                                <Run Text="{DynamicResource DetailPagePriceChangedIn24hField}"/>
                                <Run Text="{Binding SearchResult.PriceChange}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Popup>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button x:Name="EngButton" Content="Eng" Tag="en" Foreground="White" Background="Transparent" 
                            BorderThickness="0 0 0 1" Margin="15 0 5 0" Click="ChangeLanguage_BtnClick"/>
                    <Button x:Name="UaButton" Content="Ua" Tag="ua" Foreground="White" Background="Transparent" 
                            BorderThickness="0 0 0 1" Click="ChangeLanguage_BtnClick"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <ContentControl Grid.Row="1" Content="{Binding SelectedViewModel}"/>
    </Grid>
</Window>
