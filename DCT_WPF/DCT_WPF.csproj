<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Fonts\helvetica_bold.otf" />
    <None Remove="Fonts\helvetica_light.otf" />
    <None Remove="Fonts\helvetica_regular.otf" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Fonts\helvetica_bold.otf" />
    <Resource Include="Fonts\helvetica_light.otf" />
    <Resource Include="Fonts\helvetica_regular.otf" />
  </ItemGroup>

</Project>
